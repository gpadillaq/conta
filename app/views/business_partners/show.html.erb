<%= render partial: 'shared/header-page', locals: {page_name: 'Socio de Negocios'} %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="actions">
            <% actions = [
                {text: 'Cancelar', url: business_partners_path, class: 'btn btn-white'},
                {text: 'Editar', url: edit_business_partner_path(@record), class: 'btn btn-primary'}

              ]
            %>

            <%= render 'shared/actions', actions: actions %>
          </div>
          <div class="row">
            <div class='col-sm-5'>
              <p>
                <strong>Tipo de Socio:</strong>
                <%= @record.business_partner_type.display_name %>
              </p>
            </div>
            <div class='col-sm-4'>
              <p>
                <strong>Tipo de Moneda:</strong>
                <%= @record.coin.description %>
              </p>
            </div>
            <div class='col-sm-3'>
              <p>
                <strong>Activo:</strong>
                <input type='checkbox' <%= @record.active ? 'checked': '' %> data-skin="square" data-color="green">
              </p>
            </div>
          </div>
          <div class="row">
            <div class='col-sm-5'>
              <p>
                <strong>Nombre:</strong>
                <%= @record.name %>
              </p>
            </div>
            <div class='col-sm-4'>
              <p>
                <strong>Identificador:</strong>
                <%= @record.id_number %>
              </p>
            </div>
            <div class='col-sm-3'>
              <p>
                <strong>Email:</strong>
                <%= @record.email %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-5">
              <p>
                <strong>Direccion:</strong>
                <%= @record.direction %>
              </p>
            </div>
            <div class="col-sm-3">
              <p>
                <strong>Telefono:</strong>
                <%= @record.telephone %>
              </p>
            </div>
            <div class="col-sm-3">
              <p>
                <strong>Celular:</strong>
                <%= @record.cellphone %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>