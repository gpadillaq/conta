<h1>Socios de Negocios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Moneda</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Email</th>
      <th>Activo</th>
      <th>Direccion</th>
      <th>Identificador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_partners.each do |business_partner| %>
      <tr>
        <td><%= business_partner.nombre %></td>
        <td><%= business_partner.business_partner_type.display_name %></td>
        <td><%= business_partner.coin.display_name %></td>
        <td><%= business_partner.telefono %></td>
        <td><%= business_partner.celular %></td>
        <td><%= business_partner.email %></td>
        <td><%= business_partner.activo %></td>
        <td><%= business_partner.direccion %></td>
        <td><%= business_partner.identificador %></td>
        <td><%= link_to 'Ver', business_partner %></td>
        <td><%= link_to 'Editar', edit_business_partner_path(business_partner) %></td>
        <td><%= link_to 'Eliminar', business_partner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

