<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= form_for(business_partner, html: {class: 'form-horizontal'}) do |f| %>
              <% if business_partner.errors.any? %>
                <div class="row">
                  <div id="error_explanation">
                    <h2><%= pluralize(business_partner.errors.count, "error") %> prohibited this business_partner from being saved:</h2>
                    <ul>
                    <% business_partner.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                </div>
              <% end %>

            <div class="form-group">
              <%= select_input(f, business_partner, :business_partner_type_id, BusinessPartnerType.all.collect {|p| [ p.description, p.id ] },
                              {
                                grid_size: 4, field_message: :business_partner_type,
                                options: {include_blank: 'Tipo de Socio'},
                                html_options: {class: 'form-control m-b'}
                              })
              %>
              <%= select_input(f, business_partner, :coin_id, Coin.all.collect {|c| [c.symbol, c.id]},
                              {
                                grid_size: 4, field_message: :coin,
                                options: {include_blank: 'Tipo de Moneda'},
                                html_options: {class: 'form-control m-b'}
                              })
              %>
              <%= check_box_input(f, business_partner, :active,
                                  { grid_size: 2, label: 'Activo?'})
              %>
            </div>
            <div class="form-group">
              <div class="col-sm-7 <%= business_partner.errors.messages[:name].any? ? 'has-error':'' %>">
                <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre del Cliente' %>
              </div>
              <div class="col-sm-4 <%= business_partner.errors.messages[:id_number].any? ? 'has-error':'' %>">
                <%= f.text_field :id_number, class: 'form-control', placeholder: 'Cédula o RUC' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-2 <%= business_partner.errors.messages[:telephone].any? ? 'has-error':'' %>">
                <%= f.text_field :telephone, class: 'form-control', placeholder: 'Teléfono' %>
              </div>
              <div class="col-sm-2 <%= business_partner.errors.messages[:cellphone].any? ? 'has-error':'' %>">
                <%= f.text_field :cellphone, class: 'form-control', placeholder: 'Celular' %>
              </div>
              <div class="col-sm-3 <%= business_partner.errors.messages[:email].any? ? 'has-error':'' %>">
                <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
              </div>
              <div class="col-sm-5 <%= business_partner.errors.messages[:direction].any? ? 'has-error':'' %>">
                <%= f.text_area :direction, class: 'form-control', placeholder: 'Dirección...' %>
              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-white" type="submit">Cancelar</button>
                <button class="btn btn-primary" type="submit">Guardar Cambios</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
