<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= form_for(business_partner) do |f| %>
            <div class="row">
              <% if business_partner.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(business_partner.errors.count, "error") %> prohibited this business_partner from being saved:</h2>
                  <ul>
                  <% business_partner.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
            </div>

            <div class="row">
              <div class="row">
                <div class="input-field col s5">
                  <%= f.select :business_partner_type_id,
                    BusinessPartnerType.all.collect {|p| [ p.description, p.id ] },
                    { include_blank: 'Tipo' } %>
                </div>
        <div class="input-field col s5">
          <%= f.select :coin_id,
            Coin.all.collect {|c| [c.symbol, c.id]},
            { include_blank: 'Moneda'}%>
        </div>
        <div class="input-field col s2">
           <%= f.check_box :active %>
           <%= f.label :active, 'Activo?' %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">account_circle</i>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">phone</i>
          <%= f.label :telephone %>
          <%= f.text_field :telephone %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">stay_current_portrait</i>
          <%= f.label :cellphone %>
          <%= f.text_field :cellphone %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">email</i>
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">location_on</i>
          <%= f.label :direction %>
          <%= f.text_area :direction %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">person_pin</i>
          <%= f.label :id_number %>
          <%= f.text_field :id_number %>
        </div>
      </div>
    </div>
    <div class="row">
      <button type="submit" name="commit" class="btn waves-effect waves-light">
        Guardar
        <i class="material-icons right">send</i>
      </button>
    </div>
  <% end %>
</div>
