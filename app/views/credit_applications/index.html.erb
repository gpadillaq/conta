<p id="notice"><%= notice %></p>

<h1>Credit Applications</h1>

<table>
  <thead>
    <tr>
      <th>Business partner</th>
      <th>Fecha</th>
      <th>Fecha de vencimiento</th>
      <th>Credit type</th>
      <th>Payment frequency</th>
      <th>Payment number</th>
      <th>Monto</th>
      <th>Coin</th>
      <th>Nota</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_applications.each do |credit_application| %>
      <tr>
        <td><%= credit_application.business_partner %></td>
        <td><%= credit_application.fecha %></td>
        <td><%= credit_application.fecha_de_vencimiento %></td>
        <td><%= credit_application.credit_type %></td>
        <td><%= credit_application.payment_frequency %></td>
        <td><%= credit_application.payment_number %></td>
        <td><%= credit_application.monto %></td>
        <td><%= credit_application.coin %></td>
        <td><%= credit_application.nota %></td>
        <td><%= credit_application.status %></td>
        <td><%= link_to 'Show', credit_application %></td>
        <td><%= link_to 'Edit', edit_credit_application_path(credit_application) %></td>
        <td><%= link_to 'Destroy', credit_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Credit Application', new_credit_application_path %>
