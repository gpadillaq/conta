<%
  is_sub_menu_item ||= false
  id = I18n.transliterate(menu_item[:label].dehumanize)
  label = menu_item[:label]
  url = eval(menu_item[:url].to_s) || "#"
  items = menu_item[:items]
  li_class = ""
  ul_class = ""
  if items.present?
    li_class += " no-padding"
    ul_class += "nav collapse"
  end
%>
<li id="<%=id%>" class="<%=li_class%>">
  <% if items.present? %>
    <%= link_to url do %>
      <i class="fa fa-laptop"></i> <span class="nav-label"><%= label %></span><span class="fa arrow"></span>
    <% end %>
    <ul class="<%=ul_class%>">
      <% items.each do |sub_menu_item| %>
        <%= render "layouts/menu_item", menu_item: sub_menu_item, is_sub_menu_item: true %>
      <% end %>
    </ul>
  <% else %>
    <%= link_to url do %>
      <i class="fa fa-laptop"></i> <span class="nav-label"><%= label %></span>
    <% end %>
  <% end %>
</li>
